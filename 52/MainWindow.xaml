<Window x:Class="FoxAndChickensGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fox and Chickens Game" Height="600" Width="600"
        KeyDown="Window_KeyDown"
        >
    <Grid Name="GridMain" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        <!-- Основная часть 3x7 -->
        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="1" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="1" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="2" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="2" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="3" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="4" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="5" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="5" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="5" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="6" Grid.Column="2" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="6" Grid.Column="3" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="6" Grid.Column="4" BorderBrush="Black" BorderThickness="1"/>

        <!-- Бо🐥овые части (дополнительные клетки) -->
        <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.Column="1" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="1" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="1" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.Column="0" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1"/>

        <Border Grid.Row="2" Grid.Column="5" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.Column="5" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="5" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="2" Grid.Column="6" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="3" Grid.Column="6" BorderBrush="Black" BorderThickness="1"/>
        <Border Grid.Row="4" Grid.Column="6" BorderBrush="Black" BorderThickness="1"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Text="🦊" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="4" Text="🦊" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Куры -->
        <TextBlock Grid.Row="3" Grid.Column="1" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="3" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="4" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="5" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Grid.Row="4" Grid.Column="1" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="2" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="3" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="4" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="5" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="4" Grid.Column="6" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="6" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
  

        <TextBlock Grid.Row="5" Grid.Column="2" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="5" Grid.Column="3" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="5" Grid.Column="4" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Grid.Row="6" Grid.Column="2" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="6" Grid.Column="3" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="6" Grid.Column="4" Text="🐥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
